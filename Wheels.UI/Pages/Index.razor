@page "/"
@using Wheels.Domain.Models
@using Wheels.Application.Services 

@inject PostService PostService
<div class="row"> 
    <div class="col-md-8 offset-1">
        @if (_posts.Count > 0)
        {
            foreach (var post in _posts)
            {
                <MudCard Elevation="3" Style="margin: 15px; padding: 30px; border-radius: 10px">

                    <MudCardMedia Image="@post.ImageFile[0]" Style="height: 400px"/>
                    <MudText Typo="Typo.h5">@post.Title</MudText>
                    @foreach (var line in post.Text)
                    {
                        <MudText Style="margin-bottom: 10px" Typo="Typo.body2">
                            @line
                        </MudText>
                    }
                    <MudCardActions>
                        <MudButton Variant="Variant.Text" Color="Color.Primary">Share</MudButton>
                        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                    </MudCardActions>
                </MudCard>
            }
        }
    </div>
    <div class="col-md-3"> 
    </div>
</div>

@code{
    List<Post> _posts = new List<Post>();
    protected override async Task OnInitializedAsync()
    {
        _posts = await PostService.GetPostsAsync();
    }
}
