@page "/login"
@model LoginModel

@{
    Layout = "/Pages/_Layout.cshtml";
}
<style>
    .form-floating{
        margin-bottom: 15px;
    }
</style>
<div class="row" style="width: 80%; margin: 50px auto; justify-content: center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2 style="text-align: center">Вход</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating"> 
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label"> 
                            <input class="form-check-input" asp-for="Input.RememberMe" />  Запомнить меня 
                        </label>
                    </div>
                </div>
                <div style="margin-bottom: 15px">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: rgba(54, 29, 168, 0.78)">
                        Войти
                    </button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Забыли пароль?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
                    </p>
                    @* <p> *@
                    @*     <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Выслать заново письмо с подтверждением</a> *@
                    @* </p> *@
                </div>
            </form>
        </section>
    </div>
